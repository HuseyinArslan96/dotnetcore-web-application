@using WebApplication.Models
@model Product

<h1>Product Details</h1>

<div>
    <h3>@Model.Name</h3>
    <p>Price: @Model.Price</p>
    <p>Stock: @Model.Stock</p>
    <p>Description: @Model.Description</p>
    <p>Brand: @Model.Brand</p>
    <p>Category: @Model.Category</p>
    <p>Thumbnail: @Model.Thumbnail</p>
</div>

<form asp-action="AddToBasket" method="post">
    <input type="hidden" name="item.ProductId" value="@Model.Id" />
    <label for="item.Quantity">Quantity:</label>
    <input type="number" name="item.Quantity" value="1" min="1" max="@Model.Stock" />
    <button type="submit">Add to Basket</button>
</form>

<h3>Basket</h3>
@if (TempData.ContainsKey("Message"))
{
    <div>@TempData["Message"]</div>
}